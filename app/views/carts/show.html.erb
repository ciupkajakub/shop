<div class="flex flex-col">
  <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
      <div class="overflow-hidden">
        <table class="min-w-full text-center text-sm font-light">
          <thead class="font-medium">
          <tr>
            <th scope="col" class="px-6 py-4">Name</th>
            <th scope="col" class="px-6 py-4">Quantity</th>
            <th scope="col" class="px-6 py-4">Price</th>
            <th scope="col" class="px-6 py-4">Total</th>
          </tr>
          </thead>
          <tbody>
          <% @cart.orderables.each do |orderable| %>
            <% product = orderable.product %>
            <div id="<%= "cart-#{product.id}" %>">
              <tr>
                <td class="whitespace-nowrap px-6 py-4"><%= product.name %></td>
                <%= form_with(url: carts_add_path) do |f| %>
                  <%= f.hidden_field :id, value: product.id %>
                  <td class="whitespace-nowrap px-6 py-4"><%= f.number_field :quantity, value: orderable.quantity, min: 0 %></td>
                  <td class="whitespace-nowrap px-6 py-4"><%= product.price %></td>
                  <td class="whitespace-nowrap px-6 py-4"><%= orderable.total %></td>
                  <td class="whitespace-nowrap px-6 py-4">
                    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                      <%= f.submit "Update amount" %>
                    </button>
                  </td>
                <% end %>
                <%= form_with(url: carts_remove_path) do |f| %>
                  <%= f.hidden_field :id, value: orderable.id %>
                  <td class="whitespace-nowrap px-6 py-4">
                    <button class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
                      <%= f.submit "Remove from cart" %>
                    </button>
                  </td>
                <% end %>
              </tr>
            </div>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>