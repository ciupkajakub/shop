<% @shopping_cart.shopping_cart_items.each do |shopping_cart_item| %>
  <% product = shopping_cart_item.product %>
  <div id="<%= "shopping_cart-#{product.id}" %>">
    <div style="display:flex;justify-content:space-between;margin: 0em 5em;">
      <strong>Name:</strong>
      <%= product.name %>
      <strong>Description:</strong>
      <%= product.description %>
      <strong>Price:</strong>
      <%= product.price %>

      <%= form_with(url: shopping_carts_add_path) do |f| %>
        <%= f.hidden_field :id, value: product.id %>
        <%= f.number_field :quantity, value: shopping_cart_item.quantity, min: 0 %>
        <%= f.submit "Add To ShoppingCart" %>
      <% end %>
      <%= form_with(url: shopping_carts_remove_path) do |f| %>
        <%= f.hidden_field :id, value: shopping_cart_item.id %>
        <%= f.submit "X" %>
      <% end %>

      <strong>Total:</strong>
      <%= shopping_cart_item.total %>
    </div>
  </div>
<% end %>